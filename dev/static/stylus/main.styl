@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none
    background none
    border none
    text-transform uppercase

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	font-family BebasNeueReg
	margin 0 auto
	flex 1 0 auto
	max-width contentSize

.text--red
	color style_red

.main_text
	font-family BebasNeueBold
	text-transform uppercase
	font-size 21px
	color style_main_text-grey

.minor_text
	font-family Arial
	font-size 15px
	color style_minor_text-grey
	margin-top 24px

.color_hover--red
	&:hover
		background-color red
		animation-name example
		animation-duration 4s



