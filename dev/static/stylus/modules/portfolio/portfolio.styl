.portfolio
  width 100%
  display flex
  flex-direction column
  &__top
    display flex
    flex-direction row
    justify-content space-between
    margin-top 70px


    &-filter
      background style_red
      border none
      color style_white
      display block
      font-size 15px
      text-align center
      width 124px
      height 42px

  &__items
    max-width 100%
    display flex
    flex-wrap wrap
    justify-content space-between

    &-item
      overflow hidden
      max-width 380px
      max-height 300px
      margin-top 17px