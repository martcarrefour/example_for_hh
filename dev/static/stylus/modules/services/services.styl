.services
  display flex
  flex-direction column
  margin-top 65px

  &.minor_text
    margin-top 20px

  &__text
    font-size 19px

  &__blocks
    text-align center
    margin-top 50px
    display flex
    flex-direction row
    justify-content space-around

    &-block
      width 20%

      &-img
        margin 0 auto
        align-items center
        background-color style_gray
        border-radius 50%
        display flex
        justify-content center
        width 110px
        height 110px

      &-desc
        margin-top 40px